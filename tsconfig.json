{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": ["@testing-library/jest-dom"],
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/utils/index.js",
    "__tests__/components/RepoCard.test.js",
    "__tests__/index.test.js",
    "__tests__/components/LangFilter.test.js",
    "__tests__/components/RepoList.test.js"
  ],
  "exclude": ["node_modules"]
}
